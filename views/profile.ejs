<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile Page</title>
    <link rel="stylesheet" href="/stylesheets/profile.css"/>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/stylesheets/menu.css">
  </head>
  <body>
    <!-- Profile Banner Section -->
    <div class="profile-banner">
      <div class="banner-content">
        <img src="<%= user.image %>" alt="Profile Image" class="profile-img" />
        <h2 class="username"><%= user.username %></h2>
        <a href="/logout" class="logout-btn">Logout</a>
        <a href="/create" class="create-post-btn"> Create Post </a>
      </div>
    </div>

    <!-- Story Section -->
    <div class="story-section">
      <% story.story.reverse().forEach(function(elem){%>
        <a href="/Story/<%= elem._id %>" class="story">
         <div class="story-image">
          <img
          src="<%= elem.storyImage %>"
          alt="Story"
          class="story-img"
        />
         </div>
         <h4><%= elem.storyTitle %></h4>
        </a>
     <% })  %>
    
    </div>

    <!-- Posts Section -->
    <div class="posts">
      <% user.posts.reverse().forEach(function(elem){%>
      <div class="post">
        <div class="post-header">
          <img src="<%= user.image %>" alt="User Avatar" class="post-avatar" />
          <h3 class="post-username"><%= user.username %></h3>
        </div>
        <img src="<%= elem.postimage %>" alt="Post Image" class="post-img" />
        <h4 class="post-title"><%= elem.title %></h4>
        <p class="post-description"><%=elem.description %></p>
        <div class="post-footer">
          <span class="likes">❤️ 120 Likes</span>
          <a id="delete" href="/delete/<%= elem._id %>">Delete</a>
        </div>
      </div>
      <%}) %>

      <!-- More posts can go here -->
    </div>

    <!-- Home Back Button -->
    <a class="back-home-btn" href="/feed"
      ><i class="fa-solid fa-arrow-left"></i>
    </a>



    <div class="bottom-nav">
      <a href="/feed" class="nav-item">
        <i class="fas fa-home"></i>
      </a>
  
      <a href="#" class="nav-item">
        <i class="fas fa-search"></i>
      </a>
      <a href="/create" class="nav-item">
        <i class="fas fa-plus-circle"></i>
      </a>
  
     
     
      <a href="/Saved" class="nav-item">
        <i class="fas fa-bookmark"></i>
      </a>
  
      <a href="/profile" class="nav-item">
        <img class="fa-user-circle" src="<%= user.image %>" alt="">
      </a>
      
    </div>
  </body>
</html>
