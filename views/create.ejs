<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Post</title>
    <link rel="stylesheet" href="/stylesheets/create.css">
    <link rel="stylesheet" href="/stylesheets/menu.css">
</head>
<body>
    <div class="create-post-container">
        <div class="create-post-form">
            <h2>Create Post</h2>
            
            <!-- Title Input -->
           <form action="/create" method="post">
            <div class="form-group">
                <label for="title">Post Title</label>
                <input name="title" type="text" id="title" class="form-input" placeholder="Enter title here" >
            </div>
            
            <!-- Description Input -->
            <div class="form-group">
                <label for="description">Post Description</label>
                <textarea  name="description" id="description" class="form-input" rows="4" placeholder="Enter description here"></textarea>
            </div>
            
            <!-- Image URL Input -->
            <div class="form-group">
                <label for="image-url">Image URL</label>
                <input name="postimage" type="url" id="image-url" class="form-input" placeholder="Enter image URL here">
            </div>
            
            <!-- Like Count and Save Post Button -->
            <div class="post-actions">
                <div class="like-count">
                    <span id="like-count">0</span> Likes
                </div>
                <button class="save-btn">Save Post</button>
           </form>
            </div>
        </div>
    </div>
    <div class="bottom-nav">
        <a href="/feed" class="nav-item">
          <i class="fas fa-home"></i>
        </a>
    
        <a href="#" class="nav-item">
          <i class="fas fa-search"></i>
        </a>
        <a href="/create" class="nav-item">
          <i class="fas fa-plus-circle"></i>
        </a>
    
       
       
        <a href="/Saved" class="nav-item">
          <i class="fas fa-bookmark"></i>
        </a>
    
        <a href="/profile" class="nav-item">
          <img class="fa-user-circle" src="<%= user.image %>" alt="">
        </a>
        
      </div>
    <script>
        // JavaScript to handle like button functionality
        document.getElementById('like-count').addEventListener('click', function () {
            let likeCount = parseInt(document.getElementById('like-count').textContent);
            document.getElementById('like-count').textContent = likeCount + 1;
        });
    </script>
</body>
</html>
